// Place your settings in this file to overwrite the default settings
{
    // Editor mumbo jumbo
    "editor.wordWrap" : "on",
    "editor.bracketPairColorization.enabled": true,
    "workbench.editor.showTabs": "single",
    "editor.minimap.enabled": true,
    "editor.tabSize": 4,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.quickOpen.closeOnFocusLost": false,
    "workbench.editor.enablePreview": false,
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Cyberpunk",
    "workbench.tree.enableStickyScroll": true,

    "editor.cursorStyle": "block",
    "editor.formatOnPaste": true,
    "editor.suggestSelection": "first",

    // Python
    "python.venvPath": "/Users/shusso/.virtualenvs/",
    "editor.fontSize": 13,
    "editor.fontFamily": "'Monaco'",
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "editor.wordWrap": "on",
        "files.trimTrailingWhitespace": false,
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "files.insertFinalNewline": true,
    "debug.console.fontSize":14,
    "editor.inlineSuggest.enabled": true,
    "files.exclude": {
        "**/.env": true,
        "**/.venv": true,
        "**/dist": true,
        "**/.git": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/**.pb.go": true,
        "**.gitignore**": true,
        "**/vendor": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/**.pb.go": true,
        "**.gitignore**": true,
        "**/vendor": true
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontFamily": "'Monaco'",
    "extensions.ignoreRecommendations": false,
    "telemetry.telemetryLevel": "off",
    "center-editor-window.threeStateToggle": true,
    "python.languageServer": "Default",
    "jupyter.askForKernelRestart": false,
    "explorer.confirmDragAndDrop": false,
    "redhat.telemetry.enabled": false,
    "python.defaultInterpreterPath": "/Users/shusso/.virtualenvs/py310_arm",
    "git.openRepositoryInParentFolders": "never",
    "git.ignoredRepositories": [
        "testing"
    ],
    "python.testing.pytestArgs": ["-v", "-s", "--color=yes", "--disable-warnings"],
    "editor.accessibilitySupport": "off",
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "notebook.experimental.variablesView": true,
    "security.workspace.trust.untrustedFiles": "open",
}
