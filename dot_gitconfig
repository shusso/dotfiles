[user]
        name = Samuel Husso
        email = shusso@iki.fi
[url "git@github.com:"]
       insteadOf = https://github.com/
[color]
        ui = auto
[color "branch"]
       current = yellow reverse
       local = yellow
       remote = green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       changed = green
       untracked = cyan
[alias]
       lg = log --stat --pretty='format:%Cblue[%ad] %Cred<%h> %Creset(%an) %Cgreen%s' --date=short --graph
       lg2 = log --stat -p --pretty='format:%Cblue[%ad] %Cred<%h> %Creset(%an) %Cgreen%s' --date=short --graph
       lgp = log --stat -p --pretty='format:%Cblue[%ad] %Cred<%h> %Creset(%an) %Cgreen%s' --date=short --graph
       logs = log --stat
       logp = log --stat -p
       logreview = log --stat --reverse -M
       s = status
       sc = status .
       co = checkout
       b = branch
       br = branch --remote
       r = remote
       rv = remote -v
       ba = branch -a
       ui = update-index
       sl = stash list
       ssp = stash show -p
       sp = stash pop
       whatchanged = log --stat -M --reverse
       whatchangedp = log --stat -M -p --reverse
       g = grep -in -E
       cp = cherry-pick
       dc = diff --cached -p --stat
       d = diff -p --stat
       wd = diff --word-diff
       svnfetch = svn fetch --fetch-all
       undo = reset --soft 'HEAD^'
       clean-force = clean -fdx
       pull = pull --ff-only
       up = remote update -p
       subs = submodule update --remote --init
       ss = stash save
       sshow = "!f() { git stash show stash^{/$*} -p; }; f"
       info = remote show origin
       usrp = "!f() { git up && git stash && git rebase && git stash pop; }; f"
       ur = "!f() { git up && git rebase; }; f"
       up-mod = "!f() { cd $1 && git ur; }; f"
       up-mod-all = "!f() { git submodule foreach git ur; }; f"
       mod-master = "!f() { git submodule foreach 'git co master && git ur' ; }; f"
       mod-setup = "!f() { git subs && git mod-master; }; f"
[log]
	date = local
[credential]
	helper = store
[core]
    ignorecase = false
    # autocrlf = false
    # whitespace = cr-at-eol
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
